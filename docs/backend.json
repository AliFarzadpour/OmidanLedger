
{
  "entities": {
    "Unit": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Unit",
      "type": "object",
      "description": "Represents a single rentable unit within a property.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "propertyId": { "type": "string" },
        "unitNumber": { "type": "string" },
        "status": { "type": "string", "enum": ["occupied", "vacant", "maintenance"] },
        "tagColor": { "type": "string", "format": "hex-color", "description": "A hex color code for visually tagging the unit." },
        "bedrooms": { "type": "number" },
        "bathrooms": { "type": "number" },
        "squareFootage": { "type": "number" },
        "amenities": { "type": "array", "items": { "type": "string" } },
        "financials": {
          "type": "object",
          "properties": {
            "rent": { "type": "number" },
            "deposit": { "type": "number" }
          }
        },
        "tenants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string" },
              "lastName": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "phone": { "type": "string" },
              "status": { "type": "string", "enum": ["active", "past"], "description": "The current status of the tenant's lease." },
              "leaseStart": { "type": "string", "format": "date" },
              "leaseEnd": { "type": "string", "format": "date" },
              "rentAmount": { "type": "number" },
              "rentDueDate": { "type": "number" },
              "lateFeeAmount": { "type": "number" }
            },
            "required": ["firstName", "lastName", "email", "rentAmount", "rentDueDate"]
          }
        },
        "access": {
          "type": "object",
          "properties": {
            "gateCode": { "type": "string" },
            "lockboxCode": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "utilities": {
          "type": "array",
          "description": "Defines utility responsibility at the individual unit level, for submetered billing.",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["Water", "Gas", "Electric", "Trash", "Internet"] },
              "responsibility": { "type": "string", "enum": ["tenant", "landlord"] },
              "providerName": { "type": "string" },
              "meterNumber": { "type": "string" },
              "isSubmetered": { "type": "boolean" }
            },
            "required": ["type", "responsibility"]
          }
        }
      },
      "required": ["id", "userId", "propertyId", "unitNumber"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the FiscalFlow application, including their role and billing status.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the User entity, matching Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "Defines the user's access level and capabilities within the app.",
          "enum": ["admin", "landlord", "tenant"]
        },
        "authProvider": {
          "type": "string",
          "description": "The authentication method used by the user.",
          "enum": ["password", "google.com", "apple.com"]
        },
        "billing": {
          "type": "object",
          "description": "Stores all billing and subscription information for the user.",
          "properties": {
            "subscriptionTier": {
              "type": "string",
              "enum": ["free", "pro", "enterprise"],
              "description": "The user's current subscription plan."
            },
            "status": {
              "type": "string",
              "description": "The status of the subscription (e.g., active, past_due, canceled)."
            },
            "stripeCustomerId": {
              "type": "string",
              "description": "The customer ID from Stripe."
            },
            "baseFee": {
              "type": "number",
              "description": "The base monthly or annual fee for the subscription."
            },
            "propertyRate": {
              "type": "number",
              "description": "The additional cost per property managed."
            },
            "transactionFeePercent": {
              "type": "number",
              "description": "A percentage fee charged on transaction volume, if applicable."
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Stores system-generated metadata about the user's activity.",
          "properties": {
            "propertyCount": {
              "type": "number",
              "description": "The total number of properties managed by the user."
            },
            "totalTransactionVolume": {
              "type": "number",
              "description": "The sum of transaction amounts for a billing period, used for variable billing."
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of when the user account was created."
            },
            "lastLogin": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of the user's last login."
            }
          }
        }
      },
      "required": ["uid", "email", "role"]
    },
    "BankAccount": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BankAccount",
      "type": "object",
      "description": "Represents a bank account, either manually added or linked via Plaid.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the BankAccount entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N BankAccount)"
        },
        "accountName": {
          "type": "string",
          "description": "The name of the bank account."
        },
        "accountNumber": {
          "type": "string",
          "description": "The account number (often masked)."
        },
        "bankName": {
          "type": "string",
          "description": "The name of the bank."
        },
        "accountType": {
          "type": "string",
          "description": "The type of bank account (e.g., checking, savings)."
        },
        "plaidAccessToken": {
            "type": "string",
            "description": "The Plaid access token for this account. Only present for Plaid-linked accounts."
        },
        "plaidItemId": {
            "type": "string",
            "description": "The Plaid Item ID for this account. Only present for Plaid-linked accounts."
        },
        "plaidAccountId": {
            "type": "string",
            "description": "The Plaid Account ID for this specific account. Only present for Plaid-linked accounts."
        },
        "plaidSyncCursor": {
            "type": "string",
            "description": "The cursor for the last successful Plaid transaction sync."
        }
      },
      "required": [
        "id",
        "userId",
        "accountName",
        "bankName",
        "accountType"
      ]
    },
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Represents a financial transaction with a 4-level category structure.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Transaction entity." },
        "userId": { "type": "string", "description": "Denormalized reference to User for efficient querying." },
        "bankAccountId": { "type": "string", "description": "Reference to BankAccount. (Relationship: BankAccount 1:N Transaction)"},
        "date": { "type": "string", "description": "The date of the transaction.", "format": "date-time" },
        "description": { "type": "string", "description": "Description of the transaction." },
        "amount": { "type": "number", "description": "The amount of the transaction." },
        "costCenter": { "type": "string", "description": "An optional ID to associate the transaction with a specific Property or Unit." },
        "auditStatus": { "type": "string", "enum": ["audited", "needs_audit"], "description": "The status of the transaction in the financial audit workflow."},
        "categoryHierarchy": {
            "type": "object",
            "description": "A 4-level category structure for professional accounting and tax readiness.",
            "properties": {
                "l0": { 
                    "type": "string", 
                    "description": "L0: Top-level account type.",
                    "enum": ["Asset", "Liability", "Equity", "Income", "Expense"]
                },
                "l1": { "type": "string", "description": "L1: Category Group (e.g., 'Rental Income', 'Property Operations', 'Financing')." },
                "l2": { "type": "string", "description": "L2: Tax Line (e.g., 'Line 17: Utilities', 'Line 14: Repairs')." },
                "l3": { "type": "string", "description": "L3: Specific Detail (e.g., 'Electricity', 'Software', 'Fuel')." }
            },
            "required": ["l0", "l1", "l2"]
        },
        "primaryCategory": { "type": "string", "description": "DEPRECATED: Use categoryHierarchy.l0" },
        "secondaryCategory": { "type": "string", "description": "DEPRECATED: Use categoryHierarchy.l1" },
        "subcategory": { "type": "string", "description": "DEPRECATED: Use categoryHierarchy.l2" },
        "details": { "type": "string", "description": "DEPRECATED: Use categoryHierarchy.l3" }
      },
      "required": [
        "id", "userId", "bankAccountId", "date", "description", "amount", "categoryHierarchy"
      ]
    },
    "Property": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Property",
      "type": "object",
      "description": "Represents a rental property owned by a user. This is the building-level entity.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["single-family", "multi-family", "condo", "commercial", "office"] },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city", "state", "zip"]
        },
        "tenants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string" },
              "lastName": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "phone": { "type": "string" },
              "status": { "type": "string", "enum": ["active", "past"], "description": "The current status of the tenant's lease." },
              "leaseStart": { "type": "string", "format": "date" },
              "leaseEnd": { "type": "string", "format": "date" },
              "rentAmount": { "type": "number" },
              "deposit": { "type": "number" }
            },
            "required": ["firstName", "lastName", "email"]
          }
        },
        "access": {
          "type": "object",
          "properties": {
            "gateCode": { "type": "string" },
            "lockboxCode": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "accounting": {
            "type": "object",
            "description": "Links the property to its dedicated suite of GL accounts.",
            "properties": {
                "assetAccount": { "type": "string", "description": "FK to the Asset account for this property." },
                "incomeAccount": { "type": "string", "description": "FK to the Rental Income account." },
                "lateFeeAccount": { "type": "string", "description": "FK to the Late Fee Income account." },
                "expenseAccount": { "type": "string", "description": "FK to the primary Expense account (Maint/Ops)." },
                "managementFeeAccount": { "type": "string", "description": "FK to the Management Fee Expense account." },
                "liabilityAccount": { "type": "string", "description": "FK to the Mortgage Liability account." },
                "accountsPayableAccount": { "type": "string", "description": "FK to the Accounts Payable liability account for unpaid vendor bills." },
                "securityDepositAccount": { "type": "string", "description": "FK to the Tenant Deposit Liability account." },
                "interestAccount": { "type": "string", "description": "FK to the Mortgage Interest Expense account." },
                "taxAccount": { "type": "string", "description": "FK to the Property Tax Expense account." },
                "insuranceAccount": { "type": "string", "description": "FK to the Property Insurance Expense account." },
                "hoaAccount": { "type": "string", "description": "FK to the HOA Fee Expense account." },
                "utilities": {
                    "type": "object",
                    "properties": {
                        "water": { "type": "string" },
                        "electric": { "type": "string" },
                        "gas": { "type": "string" },
                        "trash": { "type": "string" },
                        "internet": { "type": "string" },
                        "deposits": { "type": "string", "description": "Asset account for utility deposits paid." }
                    }
                }
            }
        },
        "management": {
          "type": "object",
          "properties": {
            "isManaged": { "type": "string", "enum": ["self", "professional"] },
            "companyName": { "type": "string" },
            "managerName": { "type": "string" },
            "website": { "type": "string" },
            "address": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "feeType": { "type": "string", "enum": ["percent", "flat"] },
            "feeValue": { "type": "number" },
            "leasingFee": { "type": "number" },
            "renewalFee": { "type": "number" }
          }
        },
        "mortgage": {
          "type": "object",
          "properties": {
            "purchasePrice": { "type": "number" },
            "purchaseDate": { "type": "string", "format": "date" },
            "hasMortgage": { "type": "string", "enum": ["yes", "no"] },
            "lenderName": { "type": "string" },
            "accountNumber": { "type": "string" },
            "lenderPhone": { "type": "string" },
            "lenderEmail": { "type": "string", "format": "email" },
            "monthlyPayment": { "type": "number" },
            "interestRate": { "type": "number" },
            "loanBalance": { "type": "number" },
            "escrow": {
              "type": "object",
              "properties": {
                "includesTax": { "type": "boolean" },
                "includesInsurance": { "type": "boolean" },
                "includesHoa": { "type": "boolean" }
              }
            }
          }
        },
        "taxAndInsurance": {
          "type": "object",
          "properties": {
            "propertyTaxAmount": { "type": "number" },
            "taxParcelId": { "type": "string" },
            "insuranceProvider": { "type": "string" },
            "policyNumber": { "type": "string" },
            "annualPremium": { "type": "number" },
            "renewalDate": { "type": "string", "format": "date" }
          }
        },
        "hoa": {
          "type": "object",
          "properties": {
            "hasHoa": { "type": "string", "enum": ["yes", "no"] },
            "fee": { "type": "number" },
            "frequency": { "type": "string", "enum": ["monthly", "quarterly", "semi-annually", "annually"] },
            "contactName": { "type": "string" },
            "contactPhone": { "type": "string" },
            "contactEmail": { "type": "string", "format": "email" }
          }
        },
        "utilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "responsibility": { "type": "string", "enum": ["tenant", "landlord"] },
              "providerName": { "type": "string" },
              "providerContact": { "type": "string" }
            }
          }
        },
        "preferredVendors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string" },
              "name": { "type": "string" },
              "phone": { "type": "string" }
            }
          }
        }
      },
      "required": ["id", "userId", "name", "address"]
    },
    "Vendor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Vendor",
      "type": "object",
      "description": "Represents a vendor or professional contact for services.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Vendor." },
        "userId": { "type": "string", "description": "The user who owns this vendor record." },
        "name": { "type": "string", "description": "The name of the vendor contact." },
        "company": { "type": "string", "description": "The vendor's company name, if applicable." },
        "role": { "type": "string", "description": "The service or role the vendor provides (e.g., Plumber, Electrician)." },
        "phone": { "type": "string", "description": "The vendor's phone number." },
        "email": { "type": "string", "description": "The vendor's email address.", "format": "email" },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of when the vendor was added." },
        "defaultCategory": { "type": "string", "description": "The default expense category for this vendor, used for automation." }
      },
      "required": ["id", "userId", "name", "role"]
    },
    "Bill": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Bill",
        "type": "object",
        "description": "Represents an unpaid (or paid) bill from a vendor.",
        "properties": {
            "id": { "type": "string" },
            "userId": { "type": "string" },
            "propertyId": { "type": "string" },
            "vendorId": { "type": "string" },
            "expenseAccountId": { "type": "string" },
            "amount": { "type": "number" },
            "balance": { "type": "number", "description": "The remaining amount due on the bill." },
            "status": { "type": "string", "enum": ["unpaid", "partially-paid", "paid"] },
            "invoiceNumber": { "type": "string" },
            "description": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "dueDate": { "type": "string", "format": "date-time" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "userId", "propertyId", "vendorId", "expenseAccountId", "amount", "status", "date"]
    },
    "MonthlyStat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MonthlyStat",
      "type": "object",
      "description": "Stores aggregated financial and occupancy statistics for a property for a single month.",
      "properties": {
        "income": {
          "type": "number",
          "description": "Total income for the month."
        },
        "expense": {
          "type": "number",
          "description": "Total expenses for the month."
        },
        "netIncome": {
          "type": "number",
          "description": "Calculated net income (income - expense)."
        },
        "occupancy": {
          "type": "number",
          "description": "Occupancy rate for the month (e.g., 0.95 for 95%)."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last update."
        }
      },
      "required": ["income", "expense", "netIncome", "updatedAt"]
    },
    "GlobalStats": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GlobalStats",
      "type": "object",
      "description": "Stores aggregated statistics for the entire platform, like total users and properties.",
      "properties": {
        "totalLandlords": {
          "type": "number",
          "description": "Total number of users with the 'landlord' role."
        },
        "totalTenants": {
          "type": "number",
          "description": "Total number of users with the 'tenant' role."
        },
        "totalProperties": {
          "type": "number",
          "description": "Total number of properties across all users."
        },
        "totalTransactionVolume": {
          "type": "number",
          "description": "Sum of all transaction amounts for a billing period across all users."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last update."
        }
      },
      "required": ["totalLandlords", "totalTenants", "totalProperties"]
    },
    "PropertyDocument": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PropertyDocument",
      "type": "object",
      "description": "Represents a file uploaded for a specific property (e.g. lease, inspection).",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the document." },
        "propertyId": { "type": "string", "description": "The ID of the property this document belongs to." },
        "userId": { "type": "string", "description": "The UID of the user who owns the property." },
        "fileName": { "type": "string", "description": "The original name of the uploaded file." },
        "description": { "type": "string", "description": "A user-provided description for the document." },
        "fileType": { "type": "string", "enum": ["lease", "credit_report", "id", "inspection", "deed", "other"], "description": "The type of document." },
        "downloadUrl": { "type": "string", "format": "uri", "description": "The public URL to download the file from Firebase Storage." },
        "storagePath": { "type": "string", "description": "The full path to the file in Firebase Storage." },
        "uploadedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "propertyId", "userId", "fileName", "fileType", "downloadUrl", "storagePath", "uploadedAt"]
    },
    "OpsThread": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OpsThread",
      "type": "object",
      "description": "A communication thread for operations.",
      "properties": {
        "uid": { "type": "string" },
        "subject": { "type": "string" },
        "status": { "type": "string", "enum": ["open", "pending", "closed"] },
        "priority": { "type": "string", "enum": ["low", "normal", "high", "urgent"] },
        "propertyId": { "type": ["string", "null"] },
        "unitId": { "type": ["string", "null"] },
        "vendorId": { "type": ["string", "null"] },
        "tenantId": { "type": ["string", "null"] },
        "lastMessageAt": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "OpsMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OpsMessage",
      "type": "object",
      "description": "A message within an operations thread.",
      "properties": {
        "uid": { "type": "string" },
        "threadId": { "type": "string" },
        "senderType": { "type": "string", "enum": ["landlord", "tenant", "vendor", "internal"] },
        "senderName": { "type": "string" },
        "senderEmail": { "type": "string", "format": "email" },
        "body": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "OpsTask": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OpsTask",
      "type": "object",
      "description": "A task for operations.",
      "properties": {
        "uid": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["todo", "in_progress", "blocked", "done", "canceled"] },
        "priority": { "type": "string", "enum": ["low", "normal", "high", "urgent"] },
        "dueDate": { "type": ["string", "null"], "format": "date-time" },
        "propertyId": { "type": ["string", "null"] },
        "unitId": { "type": ["string", "null"] },
        "threadId": { "type": ["string", "null"] },
        "vendorId": { "type": ["string", "null"] },
        "tenantId": { "type": ["string", "null"] },
        "tags": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "WorkOrder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WorkOrder",
      "type": "object",
      "description": "Represents a work order for maintenance or repair.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "propertyId": { "type": "string" },
        "unitId": { "type": ["string", "null"] },
        "tenantId": { "type": ["string", "null"] },
        "vendorId": { "type": ["string", "null"] },
        "title": { "type": "string" },
        "description": { "type": "string" },
