{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the FiscalFlow application, including their role and billing status.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the User entity, matching Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "Defines the user's access level and capabilities within the app.",
          "enum": ["admin", "landlord", "tenant"]
        },
        "authProvider": {
          "type": "string",
          "description": "The authentication method used by the user.",
          "enum": ["password", "google.com", "apple.com"]
        },
        "billing": {
          "type": "object",
          "description": "Stores all billing and subscription information for the user.",
          "properties": {
            "subscriptionTier": {
              "type": "string",
              "enum": ["free", "pro", "enterprise"],
              "description": "The user's current subscription plan."
            },
            "status": {
              "type": "string",
              "description": "The status of the subscription (e.g., active, past_due, canceled)."
            },
            "stripeCustomerId": {
              "type": "string",
              "description": "The customer ID from Stripe."
            },
            "baseFee": {
              "type": "number",
              "description": "The base monthly or annual fee for the subscription."
            },
            "propertyRate": {
              "type": "number",
              "description": "The additional cost per property managed."
            },
            "transactionFeePercent": {
              "type": "number",
              "description": "A percentage fee charged on transaction volume, if applicable."
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Stores system-generated metadata about the user's activity.",
          "properties": {
            "propertyCount": {
              "type": "number",
              "description": "The total number of properties managed by the user."
            },
            "totalTransactionVolume": {
              "type": "number",
              "description": "The sum of transaction amounts for a billing period, used for variable billing."
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of when the user account was created."
            },
            "lastLogin": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp of the user's last login."
            }
          }
        }
      },
      "required": ["uid", "email", "role"]
    },
    "BankAccount": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BankAccount",
      "type": "object",
      "description": "Represents a bank account, either manually added or linked via Plaid.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the BankAccount entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N BankAccount)"
        },
        "accountName": {
          "type": "string",
          "description": "The name of the bank account."
        },
        "accountNumber": {
          "type": "string",
          "description": "The account number (often masked)."
        },
        "bankName": {
          "type": "string",
          "description": "The name of the bank."
        },
        "accountType": {
          "type": "string",
          "description": "The type of bank account (e.g., checking, savings)."
        },
        "plaidAccessToken": {
            "type": "string",
            "description": "The Plaid access token for this account. Only present for Plaid-linked accounts."
        },
        "plaidItemId": {
            "type": "string",
            "description": "The Plaid Item ID for this account. Only present for Plaid-linked accounts."
        },
        "plaidAccountId": {
            "type": "string",
            "description": "The Plaid Account ID for this specific account. Only present for Plaid-linked accounts."
        },
        "plaidSyncCursor": {
            "type": "string",
            "description": "The cursor for the last successful Plaid transaction sync."
        }
      },
      "required": [
        "id",
        "userId",
        "accountName",
        "bankName",
        "accountType"
      ]
    },
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Represents a financial transaction.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Transaction entity."
        },
        "userId": {
          "type": "string",
          "description": "Denormalized reference to User for efficient querying."
        },
        "bankAccountId": {
          "type": "string",
          "description": "Reference to BankAccount. (Relationship: BankAccount 1:N Transaction)"
        },
        "date": {
          "type": "string",
          "description": "The date of the transaction.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description of the transaction."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the transaction."
        },
        "primaryCategory": {
          "type": "string",
          "description": "The top-level category."
        },
        "secondaryCategory": {
          "type": "string",
          "description": "The second-level category."
        },
        "subcategory": {
          "type": "string",
          "description": "The most specific, third-level category."
        }
      },
      "required": [
        "id",
        "userId",
        "bankAccountId",
        "date",
        "description",
        "amount",
        "primaryCategory",
        "secondaryCategory",
        "subcategory"
      ]
    },
    "Property": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Property",
      "type": "object",
      "description": "Represents a rental property owned by a user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["occupied", "vacant", "maintenance"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["single-family", "multi-family", "condo", "commercial"] },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city", "state", "zip"]
        },
        "accounting": {
            "type": "object",
            "description": "Links the property to its dedicated suite of GL accounts.",
            "properties": {
                "assetAccount": { "type": "string", "description": "FK to the Asset account for this property." },
                "incomeAccount": { "type": "string", "description": "FK to the Rental Income account." },
                "lateFeeAccount": { "type": "string", "description": "FK to the Late Fee Income account." },
                "expenseAccount": { "type": "string", "description": "FK to the primary Expense account (Maint/Ops)." },
                "managementFeeAccount": { "type": "string", "description": "FK to the Management Fee Expense account." },
                "liabilityAccount": { "type": "string", "description": "FK to the Mortgage Liability account." },
                "accountsPayableAccount": { "type": "string", "description": "FK to the Accounts Payable liability account for unpaid vendor bills." },
                "securityDepositAccount": { "type": "string", "description": "FK to the Tenant Deposit Liability account." },
                "interestAccount": { "type": "string", "description": "FK to the Mortgage Interest Expense account." },
                "taxAccount": { "type": "string", "description": "FK to the Property Tax Expense account." },
                "insuranceAccount": { "type": "string", "description": "FK to the Property Insurance Expense account." },
                "hoaAccount": { "type": "string", "description": "FK to the HOA Fee Expense account." },
                "utilities": {
                    "type": "object",
                    "properties": {
                        "water": { "type": "string" },
                        "electric": { "type": "string" },
                        "gas": { "type": "string" },
                        "trash": { "type": "string" },
                        "internet": { "type": "string" },
                        "deposits": { "type": "string", "description": "Asset account for utility deposits paid." }
                    }
                }
            }
        },
        "financials": {
          "type": "object",
          "properties": {
            "targetRent": { "type": "number" },
            "securityDeposit": { "type": "number" }
          }
        },
        "management": {
          "type": "object",
          "properties": {
            "isManaged": { "type": "string", "enum": ["self", "professional"] },
            "companyName": { "type": "string" },
            "managerName": { "type": "string" },
            "website": { "type": "string" },
            "address": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "feeType": { "type": "string", "enum": ["percent", "flat"] },
            "feeValue": { "type": "number" },
            "leasingFee": { "type": "number" },
            "renewalFee": { "type": "number" }
          }
        },
        "mortgage": {
          "type": "object",
          "properties": {
            "purchasePrice": { "type": "number" },
            "purchaseDate": { "type": "string", "format": "date" },
            "hasMortgage": { "type": "string", "enum": ["yes", "no"] },
            "lenderName": { "type": "string" },
            "accountNumber": { "type": "string" },
            "lenderPhone": { "type": "string" },
            "lenderEmail": { "type": "string", "format": "email" },
            "monthlyPayment": { "type": "number" },
            "interestRate": { "type": "number" },
            "loanBalance": { "type": "number" },
            "escrow": {
              "type": "object",
              "properties": {
                "includesTax": { "type": "boolean" },
                "includesInsurance": { "type": "boolean" },
                "includesHoa": { "type": "boolean" }
              }
            }
          }
        },
        "taxAndInsurance": {
          "type": "object",
          "properties": {
            "propertyTaxAmount": { "type": "number" },
            "taxParcelId": { "type": "string" },
            "insuranceProvider": { "type": "string" },
            "policyNumber": { "type": "string" },
            "annualPremium": { "type": "number" },
            "renewalDate": { "type": "string", "format": "date" }
          }
        },
        "hoa": {
          "type": "object",
          "properties": {
            "hasHoa": { "type": "string", "enum": ["yes", "no"] },
            "fee": { "type": "number" },
            "frequency": { "type": "string", "enum": ["monthly", "quarterly", "semi-annually", "annually"] },
            "contactName": { "type": "string" },
            "contactPhone": { "type": "string" },
            "contactEmail": { "type": "string", "format": "email" }
          }
        },
        "utilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "responsibility": { "type": "string", "enum": ["tenant", "landlord"] },
              "providerName": { "type": "string" },
              "providerContact": { "type": "string" }
            }
          }
        },
        "access": {
          "type": "object",
          "properties": {
            "gateCode": { "type": "string" },
            "lockboxCode": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "tenants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string" },
              "lastName": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "phone": { "type": "string" },
              "leaseStart": { "type": "string", "format": "date" },
              "leaseEnd": { "type": "string", "format": "date" },
              "rentAmount": { "type": "number" },
              "rentDueDate": { "type": "number" },
              "lateFeeAmount": { "type": "number" }
            },
             "required": ["firstName", "lastName", "email", "rentAmount", "rentDueDate"]
          }
        },
        "preferredVendors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string" },
              "name": { "type": "string" },
              "phone": { "type": "string" }
            }
          }
        }
      },
      "required": ["id", "userId", "name", "address"]
    },
    "Vendor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Vendor",
      "type": "object",
      "description": "Represents a vendor or professional contact for services.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Vendor." },
        "userId": { "type": "string", "description": "The user who owns this vendor record." },
        "name": { "type": "string", "description": "The name of the vendor contact." },
        "company": { "type": "string", "description": "The vendor's company name, if applicable." },
        "role": { "type": "string", "description": "The service or role the vendor provides (e.g., Plumber, Electrician)." },
        "phone": { "type": "string", "description": "The vendor's phone number." },
        "email": { "type": "string", "description": "The vendor's email address.", "format": "email" },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of when the vendor was added." },
        "defaultCategory": { "type": "string", "description": "The default expense category for this vendor, used for automation." }
      },
      "required": ["id", "userId", "name", "role"]
    },
    "Bill": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Bill",
        "type": "object",
        "description": "Represents an unpaid (or paid) bill from a vendor.",
        "properties": {
            "id": { "type": "string" },
            "userId": { "type": "string" },
            "propertyId": { "type": "string" },
            "vendorId": { "type": "string" },
            "expenseAccountId": { "type": "string" },
            "amount": { "type": "number" },
            "balance": { "type": "number", "description": "The remaining amount due on the bill." },
            "status": { "type": "string", "enum": ["unpaid", "partially-paid", "paid"] },
            "invoiceNumber": { "type": "string" },
            "description": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "dueDate": { "type": "string", "format": "date-time" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "userId", "propertyId", "vendorId", "expenseAccountId", "amount", "status", "date"]
    },
    "MonthlyStat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MonthlyStat",
      "type": "object",
      "description": "Stores aggregated financial and occupancy statistics for a property for a single month.",
      "properties": {
        "income": {
          "type": "number",
          "description": "Total income for the month."
        },
        "expense": {
          "type": "number",
          "description": "Total expenses for the month."
        },
        "netIncome": {
          "type": "number",
          "description": "Calculated net income (income - expense)."
        },
        "occupancy": {
          "type": "number",
          "description": "Occupancy rate for the month (e.g., 0.95 for 95%)."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last update."
        }
      },
      "required": ["income", "expense", "netIncome", "updatedAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles.  Access is restricted to the user themselves.",
          "params": [
            {
              "name": "userId",
              "description": "The unique ID of the user."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/bankAccounts/{bankAccountId}",
        "definition": {
          "entityName": "BankAccount",
          "schema": {
            "$ref": "#/backend/entities/BankAccount"
          },
          "description": "Stores bank accounts for each user. Access is restricted to the user themselves.",
          "params": [
            {
              "name": "userId",
              "description": "The unique ID of the user."
            },
            {
              "name": "bankAccountId",
              "description": "The unique ID of the bank account."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/bankAccounts/{bankAccountId}/transactions/{transactionId}",
        "definition": {
          "entityName": "Transaction",
          "schema": {
            "$ref": "#/backend/entities/Transaction"
          },
          "description": "Stores transactions for each bank account. Access is restricted to the user themselves.",
          "params": [
            {
              "name": "userId",
              "description": "The unique ID of the user."
            },
            {
              "name": "bankAccountId",
              "description": "The unique ID of the bank account."
            },
            {
              "name": "transactionId",
              "description": "The unique ID of the transaction."
            }
          ]
        }
      },
      {
        "path": "/properties/{propertyId}",
        "definition": {
          "entityName": "Property",
          "schema": {
            "$ref": "#/backend/entities/Property"
          },
          "description": "Stores user-owned properties. Access is restricted to the owning user via a security rule on the 'userId' field.",
          "params": [
            {
              "name": "propertyId",
              "description": "The unique ID of the property."
            }
          ]
        }
      },
      {
        "path": "/properties/{propertyId}/monthlyStats/{monthId}",
        "definition": {
          "entityName": "MonthlyStat",
          "schema": {
            "$ref": "#/backend/entities/MonthlyStat"
          },
          "description": "Stores pre-aggregated monthly financial stats for a property. The ID is the year-month (e.g., '2024-07'). Access is inherited from the parent property.",
          "params": [
            {
              "name": "propertyId",
              "description": "The unique ID of the property."
            },
            {
              "name": "monthId",
              "description": "The year and month in YYYY-MM format."
            }
          ]
        }
      },
      {
        "path": "/vendors/{vendorId}",
        "definition": {
          "entityName": "Vendor",
          "schema": {
            "$ref": "#/backend/entities/Vendor"
          },
          "description": "Stores user-specific vendor and contractor contacts. Access is restricted to the owning user via the 'userId' field.",
          "params": [
            {
              "name": "vendorId",
              "description": "The unique ID of the vendor."
            }
          ]
        }
      },
      {
        "path": "/bills/{billId}",
        "definition": {
          "entityName": "Bill",
          "schema": {
            "$ref": "#/backend/entities/Bill"
          },
          "description": "Stores unpaid vendor bills. Access is restricted to the owning user via a security rule on the 'userId' field.",
          "params": [
            {
              "name": "billId",
              "description": "The unique ID of the bill."
            }
          ]
        }
      }
    ],
    "reasoning": "The Firestore structure is designed to ensure Authorization Independence and support the application's core features. It leverages path-based ownership for user-specific data. User data is stored under `/users/{userId}`, providing a clear path-based ownership model. Bank accounts are a subcollection of the user document. Transactions are nested under bank accounts. The `Transaction` entity includes a denormalized `userId` to support efficient and secure `collectionGroup` queries. A top-level `vendors` collection is added, secured by a `userId` field within each document."
  }
}
