
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isServerProcess() {
        return request.auth == null;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      // FIX: Allow user to update their own document without restrictive field checks.
      allow update: if isOwner(userId);
      allow list, delete: if false;

        match /bankAccounts/{bankAccountId} {
          allow read, write: if isOwner(userId);
            match /transactions/{transactionId} {
                allow read, write: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    match /{path=**}/transactions/{transactionId} {
      allow list: if (isSignedIn() && resource.data.userId == request.auth.uid) || isServerProcess();
    }

    match /properties/{propertyId} {
      // Use 'request.resource' for creation to check the incoming data
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Use 'resource' for existing documents to ensure only the owner can read/update/delete
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;

      // This allows the list view to work if the frontend uses a proper filter
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;

      match /monthlyStats/{monthId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      }
    }

    match /accounts/{accountId} {
        // Correctly handle create/update vs read/delete contexts
        allow read, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /{path=**}/monthlyStats/{monthId} {
        allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /vendors/{vendorId} {
        allow list, create, update, delete: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isOwner(resource.data.userId);
    }
    
    match /bills/{billId} {
        allow list, create, update, delete: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isOwner(resource.data.userId);
    }

    match /invoices/{invoiceId} {
      allow read, write: if resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // SECURE RULE: Explicitly allows a user to write ONLY to their own folder.
    match /logos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
