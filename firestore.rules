
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isOwner(userId);
      allow list: if false;

        match /bankAccounts/{bankAccountId} {
          allow read, write: if isOwner(userId);

            match /transactions/{transactionId} {
                allow read, write: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    // This rule allows a signed-in user to query the 'transactions' collection group
    // across all their bank accounts, but only for documents where the 'userId' field
    // matches their own UID. This is essential for reports like the General Ledger
    // and Chart of Accounts, as well as for server-side AI flows that need to
    // query a user's complete transaction history.
    match /{path=**}/transactions/{transactionId} {
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
