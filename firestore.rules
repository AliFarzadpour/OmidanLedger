
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isServerProcess() {
        return request.auth == null;
    }

    function isLandlordOfTenant(tenantUserId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(tenantUserId)).data.landlordId == request.auth.uid;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      // Deleting user docs is a sensitive operation, best handled by admin processes.
      allow delete: if false;

        match /bankAccounts/{bankAccountId} {
          // Allow read/write/delete if the user owns the parent user document.
          allow read, write, delete: if isOwner(userId);

            match /transactions/{transactionId} {
                // Inherit permissions from parent bank account.
                allow read, write, delete: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write, delete: if isOwner(userId);
        }
    }
    
    match /{path=**}/transactions/{transactionId} {
      allow list: if (isSignedIn() && resource.data.userId == request.auth.uid) || isServerProcess();
    }

    match /properties/{propertyId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Ensure only the owner can delete the property.
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();

      match /monthlyStats/{monthId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      }
      
      match /documents/{documentId} {
        allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
        allow list: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      }
      
      match /units/{unitId} {
        allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      
        match /documents/{documentId} {
            allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
        }
      }
    }

    match /accounts/{accountId} {
        allow read, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow list: if isSignedIn();
    }

    match /{path=**}/monthlyStats/{monthId} {
        allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /vendors/{vendorId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }
    
    match /bills/{billId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }

    match /invoices/{invoiceId} {
      allow read, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }

    match /settings/{settingId} {
      allow read, write: if isSignedIn();
    }
  }
}
