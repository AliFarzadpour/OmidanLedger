
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Identifies a request from a trusted server process (e.g., Genkit flow)
    // which authenticates with Admin credentials, resulting in a null auth object.
    function isServerProcess() {
        return request.auth == null;
    }

    match /users/{userId} {
      // Allow user to read their own doc.
      allow get: if isOwner(userId);
      
      // Allow user to create their own profile, ensuring the ID matches.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // Allow user to update their own document.
      // - They cannot change their ID or creation date.
      // - They ARE allowed to change the businessProfile and other potential fields.
      allow update: if isOwner(userId)
                    && request.resource.data.id == resource.data.id
                    && request.resource.data.createdAt == resource.data.createdAt;

      allow list, delete: if false; // Never allow listing or deleting users.

        match /bankAccounts/{bankAccountId} {
          allow read, write: if isOwner(userId);

            match /transactions/{transactionId} {
                allow read, write: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    // This rule allows a signed-in user to query the 'transactions' collection group
    // across all their bank accounts, but only for documents where the 'userId' field
    // matches their own UID. It ALSO allows trusted server processes (identified by a null
    // request.auth) to perform these queries for features like AI-powered reports.
    match /{path=**}/transactions/{transactionId} {
      allow list: if (isSignedIn() && resource.data.userId == request.auth.uid) || isServerProcess();
    }

    match /properties/{propertyId} {
      // Users can create, read, update, and list properties they own.
      allow list, read, create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can only delete properties they own.
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
