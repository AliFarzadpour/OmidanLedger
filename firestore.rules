
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isServerProcess() {
        return request.auth == null;
    }

    function isLandlordOfTenant(tenantUserId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(tenantUserId)).data.landlordId == request.auth.uid;
    }

    // Allow the "transactions" Collection Group queries defined in your index
    match /{path=**}/transactions/{transactionId} {
        allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Allow the "monthlyStats" Collection Group queries defined in your index
    match /{path=**}/monthlyStats/{statsId} {
        allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      // Deleting user docs is a sensitive operation, best handled by admin processes.
      allow delete: if false;

        match /bankAccounts/{bankAccountId} {
          // Allow read/write/delete if the user owns the parent user document.
          allow read, write, delete: if isOwner(userId);

            match /transactions/{transactionId} {
                // Inherit permissions from parent bank account.
                allow read, delete: if isOwner(userId);
                allow create, update: if isOwner(userId);
            }
        }
        
        match /bankBalances/{balanceId} {
            // Allow user to read and write to their own bank balances
            allow read, write, delete: if isOwner(userId);
        }

        match /categoryMappings/{mappingId} {
            allow read, write, delete: if isOwner(userId);
        }

        match /admin_invoices/{invoiceId} {
            allow read, list, write, delete: if isOwner(userId);
        }

        match /charges/{chargeId} {
            allow read, list, write, delete: if isOwner(userId);
        }

        // --- NEW: Operations Center Rules ---
        match /opsThreads/{threadId} {
          allow read, write: if isOwner(userId);
          match /messages/{messageId} {
            allow read, write: if isOwner(userId);
          }
        }

        match /opsTasks/{taskId} {
          allow read, write: if isOwner(userId);
        }

        match /opsWorkOrders/{workOrderId} {
          allow read, write: if isOwner(userId);
        }
    }
    
    match /properties/{propertyId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();

      match /monthlyStats/{monthId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      }
      
      match /documents/{documentId} {
        allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
        allow list: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      }
      
      match /units/{unitId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
      
        match /documents/{documentId} {
            allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/properties/$(propertyId)).data.userId == request.auth.uid;
        }
      }
    }
    
    // Rule for querying 'units' collection group.
    // This allows a landlord to fetch all units across all their properties in one go.
    match /{path=**}/units/{unitId} {
       allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /accounts/{accountId} {
        // CORRECTED RULE: Use resource.data for read/delete
        allow get, list, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        // Use request.resource.data for create/update
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /vendors/{vendorId} {
      allow get, list, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /bills/{billId} {
      allow get, list, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /invoices/{invoiceId} {
      allow get, list, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /settings/{settingId} {
      allow read, write: if isSignedIn();
    }
  }
}

    