
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Identifies a request from a trusted server process (e.g., Genkit flow)
    // which authenticates with Admin credentials, resulting in a null auth object.
    function isServerProcess() {
        return request.auth == null;
    }

    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isOwner(userId);
      allow list: if false;

        match /bankAccounts/{bankAccountId} {
          allow read, write: if isOwner(userId);

            match /transactions/{transactionId} {
                allow read, write: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    // This rule allows a signed-in user to query the 'transactions' collection group
    // across all their bank accounts, but only for documents where the 'userId' field
    // matches their own UID. It ALSO allows trusted server processes (identified by a null
    // request.auth) to perform these queries for features like AI-powered reports.
    match /{path=**}/transactions/{transactionId} {
      allow list: if (isSignedIn() && resource.data.userId == request.auth.uid) || isServerProcess();
    }
  }
}
