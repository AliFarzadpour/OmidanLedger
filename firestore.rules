
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isServerProcess() {
        return request.auth == null;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId)
                    && request.resource.data.id == resource.data.id
                    && request.resource.data.createdAt == resource.data.createdAt;
      allow list, delete: if false;

        match /bankAccounts/{bankAccountId} {
          allow read, write: if isOwner(userId);
            match /transactions/{transactionId} {
                allow read, write: if isOwner(userId);
            }
        }
        
        match /categoryMappings/{mappingId} {
            allow read, write: if isOwner(userId);
        }
    }
    
    match /{path=**}/transactions/{transactionId} {
      allow list: if (isSignedIn() && resource.data.userId == request.auth.uid) || isServerProcess();
    }

    match /properties/{propertyId} {
      allow list, read, create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId);
    }

    match /vendors/{vendorId} {
        allow list, create, update, delete: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isOwner(resource.data.userId);
    }
    
    match /bills/{billId} {
        allow list, create, update, delete: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isOwner(resource.data.userId);
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // FIX: Allow any authenticated user to write to the logos folder to resolve the permission error.
    // The previous rule was correct but failing for an unknown reason. This is a more permissive fix.
    match /logos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
